doctype html
html
  head
    title Editar Alumno
  body
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    h1 Editar Alumno

    form(action=`/edit/${alumno.id_alumno}` method="POST")
      label(for="nombre_alumno") Nombre:
      input(type="text" name="nombre_alumno" value=alumno.nombre_alumno)

      label(for="ciclo_alumno") Ciclo:
      input(type="number" name="ciclo_alumno" value=alumno.ciclo_alumno)

      label(for="carrera_alumno") Carrera:
      input(type="text" name="carrera_alumno" value=alumno.carrera_alumno)

      button(type="submit") Guardar cambios
