doctype html
html
  head
    title Editar Curso del Alumno
  body
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    h1 Editar Curso del Alumno

    form(action=`/editar/alumno-curso/${alumnoCurso.id_alumno}` method="POST")
      label(for="nombre_alumno") Nombre:
      input(type="text" name="nombre_alumno" value=alumnoCurso.nombre_alumno)

      label(for="nombre_curso") Curso:
      input(type="text" name="nombre_curso" value=alumnoCurso.nombre_curso)

      label(for="descripcion_curso") Descripcion:
      input(type="text" name="descripcion_curso" value=alumnoCurso.descripcion_curso)

      button(type="submit") Guardar cambios
